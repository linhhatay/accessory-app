
header(class="h-[80px] shadow-[1px_1px_10px_rgba(0,0,0,0.15)]")
  div(class="flex h-full px-[15px] py-0 mx-auto md:justify-between md:items-center").container
    div(class="hidden md:flex md:items-center md:justify-center md:px-[10px] md:py-0 md:w-[40px] md:h-[40px] md:rounded-full md:bg-gray-200")
      i(class="fa-solid fa-bars text-[20px]")
    div(class="flex items-center w-[200px] mr-[14px] md:w-auto md:mr-0")
      a(class="max-w-[50px]" href="/")
        img(class="w-full max-h-[80px] md:h-[36px]" src="https://phukienabc.com/wp-content/uploads/2022/10/phukienabc.svg", alt="logo")
      .header__menu(class="relative flex items-center text-white leading-[38px] capitalize whitespace-nowrap cursor-pointer ml-5 px-2.5 py-0 rounded-[3px] md:hidden")
        .header__menu-icon(class="flex items-center")
          i(class="fa-solid fa-bars text-base mr-[6px]")
          span Sản Phẩm
        ul.header__menu-list
          li.header__menu-item
            a(class="relative text-[0.9em] leading-[38px] flex items-center min-w-[250px] px-[1em] py-0" href="/") Bàn Phím, Chuột, Gaming Gear
            ul.header__sub-menu
              li
                a(href="/") Bàn phím
              li
                a(href="/") Chuột
              li
                a(href="/") Bàn di chuột
              li
                a(href="/") Keycap
              li
                a(href="/") Switch
          li.header__menu-item
            a(href="/") Phụ Kiện Laptop
          li.header__menu-item
            a(href="/") Linh Kiện Laptop
          li.header__menu-item
            a(href="/") Thiết Bị Nghe Nhìn
          li.header__menu-item
            a(href="/") Phần mềm, Hệ Điều Hành

    .header__search
      form.header__search-form
        input.search__field(type="search", placeholder="Tìm kiếm...", autocomplete="off")
        button(class="w-[40px] h-[40px] leading-[40px] border-0 bg-d0011b cursor-pointer rounded-r-lg")
          i(class="fa-solid fa-magnifying-glass text-white text-[1.3em]")
    .tooltip
      ul(class="py-[10px] list-none")
        //- li Nhập từ khóa về sản phẩm mà bạn cần tìm.
        li(class="mb-[8px]")
